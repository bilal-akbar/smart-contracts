<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>All || Nothing Crowd Funding</title>
  <link rel="stylesheet" href="./public/bulma.min.css">
  <script src="./public/jquery.min.js"></script>
  <script src="./public/frontend.js"></script>
</head>

<body>
  <section class="section">
    <div class="container">

      <div class="columns">
        <div class="column">

        </div>
        <div class="column">
          <form method="POST">
            <div class="field">
              <label class="label">Project Name</label>
              <div class="control">
                <input class="input" type="text" placeholder="Project name" name="title" required>
              </div>
            </div>

            <div class="field">
              <label class="label">Project Description</label>
              <div class="control">
                <textarea class="textarea" placeholder="project Description" name="desc" required></textarea>
              </div>
            </div>

            <div class="field">
              <label class="label">Project Goal</label>
              <div class="control">
                <input class="input" type="number" min="0" placeholder="10" step="any" name="goal" required>
              </div>
            </div>

            <div class="field">
              <label class="label">Project Duration in Days</label>
              <div class="control">
                <input class="input" type="number" placeholder="30" name="days" required>
              </div>
            </div>
            <input type="hidden" name="owner" id="accountOwner">
            <div class="field">
              
              <div class="control">
                <button type="submit" class="button is-link">Submit</button>
              </div>
            </div>
            
          </form>
        </div>
        <div class="column">

        </div>

      </div>
    </div>
  </section>
</body>

</html>